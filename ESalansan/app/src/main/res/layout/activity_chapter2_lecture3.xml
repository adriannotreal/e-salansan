<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".chapter2lectures.Chapter2Lecture3Activity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:id="@+id/Chapter2Lesson3Content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:fontFamily="@font/cardo"
            android:textColor="#000000"
            android:textSize="15sp"
            tools:text="Content1"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/prioriposteriori"
            android:contentDescription="@string/image_content_description"/>


        <TextView
            android:id="@+id/Chapter2Lesson3Content1B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:fontFamily="@font/cardo"
            android:textColor="#000000"
            android:textSize="15sp"
            tools:text="Content1B"/>


    </LinearLayout>

</ScrollView>